<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>

  <body style="padding: 2%">
    <div class="">
      <h1>Lista de todas as Transações</h1>
    </div>
    <div class="transactions-table" style="border: 2px solid black">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Sr. No.</th>
            <th scope="col">Placa do veículo</th>
            <th scope="col">Data</th>
            <th scope="col">Horário</th>
            <th scope="col">Valor</th>
          </tr>
        </thead>
        <!-- index.ejs file -->

        <tbody>
          <% for(var i=0; i< docs.length; i++) { %>
          <tr>
            <td><%= i %></td>
            <td><%= docs[i].placaDoVeiculo %></td>
            <td><%= docs[i].data %></td>
            <td><%= docs[i].horario %></td>
            <td><%= docs[i].valorDoPedagio %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <form class="" action="/novoRecibo" method="get">
      <button type="submit" name="button" style="margin-top: 1%">
        Adicionar
      </button>
    </form>
  </body>
</html>
